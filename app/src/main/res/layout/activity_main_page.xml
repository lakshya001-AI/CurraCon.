<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.curracon.currencyconverterapp.MainPage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview12"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="@dimen/_280sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_14sdp"
                android:layout_marginRight="@dimen/_14sdp"
                android:layout_gravity="center"
                app:cardCornerRadius="@dimen/_10sdp"
                android:backgroundTint="@color/black"
                android:layout_height="@dimen/_145sdp">

                <com.smarteist.autoimageslider.SliderView
                    android:id="@+id/slider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    app:sliderAnimationDuration="600"
                    app:sliderAutoCycleDirection="back_and_forth"
                    app:sliderIndicatorAnimationDuration="600"
                    app:sliderIndicatorEnabled="true"
                    app:sliderIndicatorGravity="center_horizontal|bottom"
                    app:sliderIndicatorMargin="15dp"
                    app:sliderIndicatorOrientation="horizontal"
                    app:sliderIndicatorPadding="3dp"
                    app:sliderIndicatorRadius="2dp"
                    app:sliderIndicatorSelectedColor="#5A5A5A"
                    app:sliderIndicatorUnselectedColor="#FFF"
                    app:sliderScrollTimeInSec="1" >

                </com.smarteist.autoimageslider.SliderView>


            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/wishtextview"
                android:textAlignment="center"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:paddingStart="@dimen/_18sdp"
                android:text="Good Morning,"
                android:layout_marginTop="@dimen/_30sdp"
                android:textColor="@color/white"
                android:textSize="@dimen/_21sdp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardview12">


            </TextView>

            <TextView
                android:id="@+id/messagetextview1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_52sdp"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:paddingStart="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="Message Textview comes Here"
                android:textColor="@color/ic_launcher_background"
                android:textSize="@dimen/_17sdp"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/wishtextview">


            </TextView>

            <TextView
                android:id="@+id/textviewtop"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_16sdp"
                android:paddingStart="@dimen/_20sdp"
                android:text="Top Currency Conversion's"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/_19sdp"
                app:layout_constraintTop_toBottomOf="@+id/messagetextview1">


            </TextView>

            <HorizontalScrollView
                android:id="@+id/horizontalscrollview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                app:layout_constraintTop_toBottomOf="@+id/textviewtop">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/_20sdp"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_160sdp"
                        android:layout_height="@dimen/_110sdp"
                        android:backgroundTint="#4C4C4C"
                        app:cardCornerRadius="@dimen/_10sdp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="24dp"
                                android:layout_marginTop="24dp"
                                android:text="USD"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_19sdp"
                                android:textStyle="bold"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">


                            </TextView>

                            <ImageView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginTop="24dp"
                                android:src="@drawable/autorenew"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.502"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">


                            </ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="24dp"
                                android:layout_marginEnd="@dimen/_20sdp"
                                android:text="INR"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_19sdp"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent">


                            </TextView>

                            <TextView
                                android:id="@+id/usdtoinrtextview"
                                android:layout_width="@dimen/_140sdp"
                                android:layout_height="@dimen/_35sdp"
                                android:background="@color/black"
                                android:text=""
                                android:textColor="@color/ic_launcher_background"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:textSize="@dimen/_20sdp"
                                android:paddingTop="@dimen/_3sdp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.836">


                            </TextView>


                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_160sdp"
                        android:layout_height="@dimen/_110sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:backgroundTint="#4C4C4C"
                        app:cardCornerRadius="@dimen/_10sdp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="24dp"
                                android:layout_marginTop="24dp"
                                android:text="GBP"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_19sdp"
                                android:textStyle="bold"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">


                            </TextView>

                            <ImageView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginTop="24dp"
                                android:src="@drawable/autorenew"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.502"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">


                            </ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="24dp"
                                android:layout_marginEnd="@dimen/_20sdp"
                                android:text="INR"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_19sdp"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent">


                            </TextView>

                            <TextView
                                android:id="@+id/gbptoinrtextview"
                                android:layout_width="@dimen/_140sdp"
                                android:layout_height="@dimen/_35sdp"
                                android:background="@color/black"
                                android:text=""
                                android:textColor="@color/ic_launcher_background"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:textSize="@dimen/_20sdp"
                                android:paddingTop="@dimen/_3sdp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.836">


                            </TextView>


                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_160sdp"
                        android:layout_height="@dimen/_110sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        android:backgroundTint="#4C4C4C"
                        app:cardCornerRadius="@dimen/_10sdp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="24dp"
                                android:layout_marginTop="24dp"
                                android:text="CAD"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_19sdp"
                                android:textStyle="bold"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">


                            </TextView>

                            <ImageView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginTop="24dp"
                                android:src="@drawable/autorenew"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.502"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">


                            </ImageView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="24dp"
                                android:layout_marginEnd="@dimen/_20sdp"
                                android:text="INR"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_19sdp"
                                android:textStyle="bold"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent">


                            </TextView>

                            <TextView
                                android:id="@+id/cadtoinrtextview"
                                android:layout_width="@dimen/_140sdp"
                                android:layout_height="@dimen/_35sdp"
                                android:background="@color/black"
                                android:text=""
                                android:textColor="@color/ic_launcher_background"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:paddingTop="@dimen/_3sdp"
                                android:textSize="@dimen/_20sdp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.836">


                            </TextView>


                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </androidx.cardview.widget.CardView>




                </LinearLayout>





            </HorizontalScrollView>

            <TextView
                android:id="@+id/questiontextview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_26sdp"
                android:paddingStart="@dimen/_20sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Wish to convert a large amount ?"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/_19sdp"
                app:layout_constraintTop_toBottomOf="@+id/horizontalscrollview">


            </TextView>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_260sdp"
                android:backgroundTint="#4C4C4C"
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/questiontextview"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/_15sdp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="@dimen/_165sdp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textview2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:text="@string/app_description"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">


                    </TextView>

                    <TextView
                        android:id="@+id/clickbutton"
                        android:layout_width="match_parent"
                        app:layout_constraintTop_toBottomOf="@+id/textview2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:text="Click Button, To Get Started"
                        android:textSize="@dimen/_15sdp"
                        android:textAlignment="center"
                        android:textColor="@color/ic_launcher_background"
                        android:layout_height="wrap_content">


                    </TextView>

                    <Button
                        android:id="@+id/convertnowbutton"
                        android:layout_width="@dimen/_140sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_14sdp"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:backgroundTint="@color/black"
                        android:text="Convert Now"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/clickbutton"
                        app:layout_constraintVertical_bias="0.0">


                    </Button>


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>

















        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>














</androidx.drawerlayout.widget.DrawerLayout>

